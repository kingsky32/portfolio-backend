{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/kingsky32/portfolio-backend.git",
  "license": "MIT",
  "scripts": {
    "predev": "npm run types",
    "dev": "nodemon 'src/index.ts' --exec 'ts-node' src/server.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cd src && copy ./api/**/*.graphql ../dist/api",
    "start": "cd dist && node ."
  },
  "dependencies": {
    "@graphql-toolkit/schema-merging": "^0.10.7",
    "@graphql-tools/graphql-file-loader": "^6.2.7",
    "@graphql-tools/load": "^6.2.8",
    "@graphql-tools/load-files": "^6.3.2",
    "@graphql-tools/schema": "^7.1.5",
    "@graphql-tools/utils": "^7.10.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "graphql-to-typescript": "^0.1.2",
    "graphql-yoga": "^1.18.3",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "pg": "^8.6.0",
    "sha256": "^0.2.0",
    "typeorm": "^0.2.34"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.6.2",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.2",
    "graphql-import-node": "^0.0.4",
    "nodemon": "^2.0.7",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.2"
  }
}
